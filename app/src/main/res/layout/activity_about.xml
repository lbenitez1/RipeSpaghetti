<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leonardobenitez.leonardobenitez.ripespaghetti.AboutActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="ABOUT"
        android:id="@+id/textView7"
        android:textColor="#fff"
        android:textSize="30dp"
        android:background="#FFB2B2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Ripe Spaghetti gives its users the ability to post reviews on albums and rate those albums.\nIf the user can not find the album he/she wants to review then that user can upload that album and begin reviewing it. "
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:textSize="20dp"
        android:textColor="#000"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />
</RelativeLayout>
