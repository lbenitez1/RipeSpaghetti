<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.leonardobenitez.leonardobenitez.ripespaghetti.AlbumActivity"
    android:gravity="end"
    android:id="@+id/albumLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/tvAlbumName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textColor="#fff"
        android:gravity="center_vertical|center_horizontal"
        android:background="#FC846B" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/albumCoverView"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tvAlbumName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tvReleaseDate"
        android:layout_below="@+id/albumCoverView"
        android:layout_alignLeft="@+id/tvAlbumName"
        android:layout_alignStart="@+id/tvAlbumName"
        android:layout_alignRight="@+id/tvAlbumName"
        android:layout_alignEnd="@+id/tvAlbumName"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/addReview"
        android:layout_below="@+id/tvReleaseDate"
        android:layout_alignLeft="@+id/tvReleaseDate"
        android:layout_alignStart="@+id/tvReleaseDate"
        android:layout_alignRight="@+id/tvReleaseDate"
        android:layout_alignEnd="@+id/tvReleaseDate"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="#000"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:hint="Add a Review" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addReview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/reviewLayout"></RelativeLayout>

</RelativeLayout>