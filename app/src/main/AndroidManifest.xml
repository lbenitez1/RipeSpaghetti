<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leonardobenitez.leonardobenitez.ripespaghetti">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".UserActivity"
            android:label="Welcome" />
        <activity
            android:name=".UserInfoActivity"
            android:label="User Info" />
        <activity
            android:name=".AlbumInsertActivity"
            android:label="Insert An Album" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".NewsActivity" />
        <activity android:name=".AlbumDirectoryActivity" />
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".AlbumActivity"></activity>
    </application>

</manifest>